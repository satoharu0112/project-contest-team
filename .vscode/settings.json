{
  // ! JavaのJDKパスを指定
  "java.jdt.ls.java.home": "C:\\Program Files\\Java\\jdk-21",
  "java.import.gradle.java.home": "C:\\Program Files\\Java\\jdk-21",

  // ! 自動保存設定
  // "files.autoSave": "afterDelay",

  // ファイル設定
  "files.autoSaveDelay": 100,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // フォーマット設定
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // エディタ設定
  "editor.copyWithSyntaxHighlighting": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.showFoldingControls": "always",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?　、。！？「」【】『』（）",
  "editor.wordWrap": "on",
  "editor.minimap.maxColumn": 50,
  "editor.minimap.showSlider": "mouseover",

  // ワークベンチ設定
  "workbench.iconTheme": "vscode-icons",
  "vsicons.dontShowNewVersionMessage": true,

  // Git設定
  "git.autofetch": true,

  // 各言語、ファイル固有設定
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.port": 5551,

  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "Prettier-SQL.expressionWidth": 50,
  "Prettier-SQL.ignoreTabSettings": true,
  "Prettier-SQL.tabSizeOverride": 2,
  "Prettier-SQL.insertSpacesOverride": true,
  "Prettier-SQL.keywordCase": "upper",
  "Prettier-SQL.SQLFlavourOverride": "postgresql",

  "[csv]": {
    "editor.wordWrap": "off"
  },

  "[python]": {
    "editor.tabSize": 4
  },

  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "redhat.telemetry.enabled": false,

  "spring.dashboard.openWith": "external"
}
